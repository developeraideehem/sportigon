# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/sportigon
POSTGRES_URI=postgresql://postgres:password@postgres:5432/sportigon_sports
REDIS_URI=redis://redis:6379

# Application Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys (Get these from sports data providers)
FOOTBALL_API_KEY=your_football_api_key
BASKETBALL_API_KEY=your_basketball_api_key

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100